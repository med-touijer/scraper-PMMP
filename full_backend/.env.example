# Database Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=marches_publics
MONGODB_COLLECTION_NAME=annonces

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Marches Publics API
PROJECT_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Scraper Configuration
SCRAPER_DELAY_BETWEEN_REQUESTS=2
SCRAPER_REQUEST_TIMEOUT=15
SCRAPER_MAX_RETRIES=3
SCRAPER_USER_AGENT=Mozilla/5.0 (API Scraper for Public Markets Analysis)

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/api.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Admin User (for initial setup)
ADMIN_EMAIL=admin@marchespublics.ma
ADMIN_PASSWORD=change-this-password
